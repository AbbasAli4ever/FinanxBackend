# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# App
PORT=3000
NODE_ENV="development"

# API
API_PREFIX="api/v1"

# Frontend URL (for invitation links)
FRONTEND_URL="http://localhost:3001"

# Email Configuration (SMTP)
# For Gmail: Use App Password (not regular password)
# For other providers: Use their SMTP settings
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your-app-password"
MAIL_FROM_EMAIL="noreply@finanx.com"
MAIL_FROM_NAME="FinanX"

# For testing, you can use services like:
# - Mailtrap (https://mailtrap.io) - catches all emails
# - Ethereal (https://ethereal.email) - fake SMTP service
# Example Mailtrap config:
# MAIL_HOST="sandbox.smtp.mailtrap.io"
# MAIL_PORT=2525
# MAIL_USER="your-mailtrap-user"
# MAIL_PASSWORD="your-mailtrap-password"
